<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_genre_form" model="ir.ui.view">
        <field name="name">biblioteca.genre.form</field>
        <field name="model">biblioteca.genre</field>
        <field name="arch" type="xml">
            <form string="Género">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_author_form" model="ir.ui.view">
        <field name="name">biblioteca.author.form</field>
        <field name="model">biblioteca.author</field>
        <field name="arch" type="xml">
            <form string="Autor">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Biografía">
                            <field name="biography"/>
                        </page>
                        <page string="Libros Publicados">
                            <field name="book_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_form" model="ir.ui.view">
        <field name="name">biblioteca.book.form</field>
        <field name="model">biblioteca.book</field>
        <field name="arch" type="xml">
            <form string="Libro">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_id"/>
                            <field name="genre_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="isbn"/>
                            <field name="publication_date"/>
                            <field name="is_available"/>
                        </group>
                    </group>
                    <notebook>
                         <page string="Descripción">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">biblioteca.book.tree</field>
        <field name="model">biblioteca.book</field>
        <field name="arch" type="xml">
            <tree string="Libros">
                <field name="name"/>
                <field name="author_id"/>
                <field name="publication_date"/>
                <field name="is_available" decoration-danger="not is_available" decoration-success="is_available"/>
            </tree>
        </field>
    </record>
    <record id="view_author_tree" model="ir.ui.view">
        <field name="name">biblioteca.author.tree</field>
        <field name="model">biblioteca.author</field>
        <field name="arch" type="xml">
            <tree string="Autores">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_genre_tree" model="ir.ui.view">
        <field name="name">biblioteca.genre.tree</field>
        <field name="model">biblioteca.genre</field>
        <field name="arch" type="xml">
            <tree string="Géneros">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.book</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_author" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">biblioteca.author</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_genre" model="ir.actions.act_window">
        <field name="name">Géneros</field>
        <field name="res_model">biblioteca.genre</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_biblioteca_root" name="Biblioteca Simple" sequence="10"/>
    <menuitem id="menu_book" name="Libros" parent="menu_biblioteca_root" action="action_book" sequence="10"/>
    <menuitem id="menu_author" name="Autores" parent="menu_biblioteca_root" action="action_author" sequence="20"/>
    
    <menuitem id="menu_biblioteca_config" name="Configuración" parent="menu_biblioteca_root" sequence="100"/>
    <menuitem id="menu_genre" name="Géneros" parent="menu_biblioteca_config" action="action_genre" sequence="30"/>

</odoo>