<odoo>
  <data>
    <!-- explicit list view definition -->

  <record model="ir.ui.view" id="biblioteca_libro_list">
    <field name="name">biblioteca_libro_list</field>
    <field name="model">biblioteca.libro</field>
    <field name="arch" type="xml">
        <list string="Lista de Libros">
            <field name="nombre_libro"/>
            <field name="autor_ids" widget="many2many_tags"/>
            <field name="isbn"/>
            <field name="publicacion"/>
            <field name="ejemplares"/>
            <field name="costo"/>
            <field name="ubicacion"/>
            <field name="categoria"/>
            <field name="codigo_libro"/>
        </list>
    </field>
</record>
    
    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca_libro_form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form> 
        <header>
        <button name="buscar_por_titulo" 
        string="Buscar por Título" 
        type="object" 
        class="oe_highlight"/>
         <button name="buscar_isbn" string="Buscar Datos ISBN" type= "object" class="oe_highlight"
         invisible="not isbn"/>
        </header>
         <sheet>
         <group string='Libro'>
            <field name="codigo_libro"/>
            <field name="nombre_libro"/>
            <field name="autor_ids" widget="many2many_tags"/>
            </group> 
            <group string='Información'>
            <field name="isbn"/>
            <field name="publicacion"/>
            <field name="ejemplares"/>     
            <field name="costo"/> 
            <field name="ubicacion"/>
            <field name="categoria"/>  
            <field name="description"/>
          </group>  
           </sheet>
         </form>
       </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_autor_list">
      <field name="name">biblioteca autor list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre_autor"/>
          <field name="apellido_autor"/>
          <field name="nacimiento_autor"/>
          <field name="pseudonimo_autor"/>
        </list>
      </field>
    </record>

<record model="ir.ui.view" id="biblioteca_autor_form">
  <field name="name">biblioteca autor form</field>
  <field name="model">biblioteca.autor</field>
  <field name="arch" type="xml">
    <form>
      <sheet>
        <group string='Información del Autor'>
          <field name="nombre_autor"/>
          <field name="apellido_autor"/>
          <field name="pseudonimo_autor"/>
        </group>
        <notebook>
          <page string="Libros del Autor">
            <field name="libros"/> 
          </page>
        </notebook>
      </sheet>
    </form>
  </field>
</record>

   <record model="ir.ui.view" id="biblioteca_usuarios_list">
      <field name="name">biblioteca usuarios list</field>
      <field name="model">biblioteca.usuarios</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombre_usuario"/>
          <field name="cedula_usuario"/>
          <field name="telefono_usuario"/>
         <field name="mail"/>
         <field name="activo"/>
        </list>
      </field>
    </record>


<record model="ir.ui.view" id="biblioteca_usuarios_form">
  <field name="name">biblioteca usuarios form</field>
  <field name="model">biblioteca.usuarios</field>
  <field name="arch" type="xml">
    <form>
      <sheet>
        <group>
          <field name="nombre_usuario"/>
          <field name="cedula_usuario"/>
        </group>
        <group string='Contacto'> 
         <field name="telefono_usuario"/>
         <field name="mail"/>
         <field name="activo"/>
        </group>    
      </sheet>
    </form>
  </field>
</record>

      <record model="ir.ui.view" id="biblioteca_personal_list">
    <field name="name">biblioteca_personal_list</field>
    <field name="model">biblioteca.personal</field>
    <field name="arch" type="xml">
        <list string="Lista de Libros">
        <field name="nombre_personal"/>
        <field name="Apellido_personal"/>
        <field name="cedula_personal"/>
        <field name="personal_telefono"/>
        <field name="personal_direccion"/>
        <field name="personal_mail"/>
        </list>
    </field>
</record>
    
    <record model="ir.ui.view" id="biblioteca_personal_form">
      <field name="name">biblioteca_personal_form</field>
      <field name="model">biblioteca.personal</field>
      <field name="arch" type="xml">
        <form>  
         <sheet>
         <group string='Información Del Personal'>
         <field name="nombre_personal"/>
         <field name="Apellido_personal"/>
         <field name="cedula_personal"/>
         <field name="personal_telefono"/>
         <field name="personal_direccion"/>
         <field name="personal_mail"/>
          </group>  
           </sheet>
         </form>
       </field>
    </record>
  

  <record model="ir.ui.view" id="biblioteca_prestamo_list">
    <field name="name">biblioteca_prestamo_list</field>
    <field name="model">biblioteca.prestamo</field>
    <field name="arch" type="xml">
        <list string="Lista de Libros">
            <field name="name" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="fecha_prestamo" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="fecha_devolucion" readonly= "estado in ('p' , 'd' , 'm')" required="estado in ('p' , 'd' , 'm')"/>
            <field name="fecha_maxima" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="libros_prestados_id" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="usuario_id" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="multa_bol" readonly= "estado in ('p' , 'd' , 'm')"/>     
            <field name="multa" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="usuario" readonly= "estado in ('p' , 'd' , 'm')"/>
            <field name="usuario_id" readonly= "estado in ('p' , 'd' , 'm')"/>
        </list>
    </field>
</record>
    
    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">biblioteca_prestamo_form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form> 
          <header>
            <button string='Prestar' type='object' name='generar_prestamo' class='btn-primary' invisible="estado in ('p' , 'd' , 'm')"/>
            <button name="action_devolucion_normal" string="Devolver (Buen Estado)" type="object" class="btn-secondary" invisible= "estado in ('b', 'd')"/>
            <button name="%(biblioteca_wizard_action_window)d" string="Devolver" type="action" class="oe_highlight" invisible="estado in ('b', 'd')"/>
            <button name="devolver" string="Devolver PY" type="object" class="oe_highlight" invisible="estado in ('b', 'd')"/>
            <field name="estado" widget= "statusbar"/>
            <field name="evaluacion_libro" widget="radio" options="{'horizontal': True}" readonly="estado in ('b', 'd')"/>
           </header>
         <sheet>
         <group col="6">
          <group colspan="2">
            <field name="name" readonly= "1"/>
            <field name="fecha_prestamo" readonly= "1"/>
            <field name="fecha_devolucion" readonly= "1"/>
            <field name="fecha_maxima" readonly= "1"/>
          </group>
             <group colspan="4">
            <field name="usuario_id" readonly= "estado in ('p', 'd', 'm')" options="{'no_create': true, 'no_quick_create':true}"/>
            <field name="multa_bol" readonly= "1"/>
            <field name="multa" readonly= "1" invisible='multa_bol== False'/>
            <field name="usuario" readonly= "1" options="{'no_open':false}"/>
            <field name="observaciones" readonly= "1"/>
             </group>
         </group>
             <field name="libros_prestados_id" readonly= "estado in ('p' , 'd' , 'm')"/>
           </sheet>
         </form>
       </field>
    </record>

     <record model="ir.ui.view" id="biblioteca_multa_list">
      <field name="name">biblioteca multa list</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <list>
          <field name="codigo_multa"/>
          <field name="multa"/>
          <field name="costo_multa"/>
          <field name="es_perdida"/>
          <field name="es_deterioro"/>
          <field name="es_retraso"/>
        </list>
      </field>
    </record>


<record model="ir.ui.view" id="biblioteca_multa_form">
  <field name="name">biblioteca multa form</field>
  <field name="model">biblioteca.multa</field>
  <field name="arch" type="xml">
    <form>
      <sheet>
        <notebook>
         <page string= 'Multas'>
        <group string='Multas Usuarios'>
          <field name="codigo_multa"/>
          <field name="multa"/>
          <field name="costo_multa"/>
        </group>
         <group string="Motivos de la Multa">
                <field name="es_perdida"/>
                <field name="es_deterioro" invisible="es_perdida"/>
                <field name="es_retraso" invisible="es_perdida"/>
        </group>
          </page>
        </notebook>
      </sheet>
    </form>
  </field>
</record>


  <record model="ir.ui.view" id="biblioteca_ubicacion_list">
    <field name="name">biblioteca_ubicacion_list</field>
    <field name="model">biblioteca.ubicacion</field>
    <field name="arch" type="xml">
        <list string="Ubicaciones de la Biblioteca">
          <field name="ubicacion_libro" string="Identificador" />
          <field name="codigo_ubicacion"/>
          <field name="descripcion"/>
          </list>
    </field>
</record>
    
    <record model="ir.ui.view" id="biblioteca_ubicacion_form">
      <field name="name">biblioteca_ubicacion_form</field>
      <field name="model">biblioteca.ubicacion</field>
      <field name="arch" type="xml">
        <form>  
         <sheet>
          <h1><field name="ubicacion_libro"/></h1> 

          <group string='Detalles Ubicación'>
            <field name="ubicacion_libro"/>
          <field name="codigo_ubicacion"/>
          </group> 
          
          <separator string="Descripción Adicional"/>
          <field name="descripcion"/> 
           </sheet>
         </form>
       </field>
    </record>


