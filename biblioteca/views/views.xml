<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Actions -->
    <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
      <field name="name">Libros</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_autor_action_window">
      <field name="name">Autores</field>
      <field name="res_model">biblioteca.autor</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_editorial_action_window">
      <field name="name">Editoriales</field>
      <field name="res_model">biblioteca.editorial</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_usuario_action_window">
      <field name="name">Usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_prestamo_action_window">
      <field name="name">Pr√©stamos</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_multa_action_window">
      <field name="name">Multas</field>
      <field name="res_model">biblioteca.multa</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- NUEVO: Action para Gesti√≥n de Usuarios del Sistema -->
    <record model="ir.actions.act_window" id="biblioteca_usuario_sistema_action_window">
      <field name="name">Gesti√≥n de Usuarios del Sistema</field>
      <field name="res_model">biblioteca.usuario.sistema</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Vista Lista de Libros -->
    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">biblioteca.libro.list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="titulo"/>
          <field name="autor"/>
          <field name="ejemplares"/>
          <field name="copias_disponibles"/>
          <field name="copias_prestadas"/>
          <field name="isbn"/>
          <field name="estado_libro" 
                 decoration-success="estado_libro == 'disponible'"
                 decoration-warning="estado_libro == 'prestado'"
                 decoration-danger="estado_libro == 'no_disponible'"/>
          <field name="prestamos_activos"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Libros -->
    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca.libro.form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form string="Libro">
          <header>
            <button name="action_buscar_openlibrary" type="object" string="Buscar en OpenLibrary" 
                    class="oe_highlight" groups="biblioteca.group_biblioteca_administrador"/>
            <field name="estado_libro" widget="badge" 
                   decoration-success="estado_libro == 'disponible'"
                   decoration-warning="estado_libro == 'prestado'"
                   decoration-danger="estado_libro == 'no_disponible'"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="firstname"/>
                <field name="titulo"/>
                <field name="autor"/>
                <field name="editorial"/>
                <field name="genero"/>
              </group>
              <group>
                <field name="isbn"/>
                <field name="ejemplares" groups="biblioteca.group_biblioteca_administrador"/>
                <field name="ejemplares" groups="biblioteca.group_biblioteca_usuario" readonly="1"/>
                <field name="copias_disponibles" readonly="1"/>
                <field name="copias_prestadas" readonly="1"/>
                <field name="costo"/>
                <field name="prestamos_activos" readonly="1"/>
              </group>
            </group>
            <group>
              <field name="description"/>
              <field name="fecha_publicacion"/>
              <field name="paginas"/>
              <field name="ubicacion"/>
            </group>
            <notebook>
              <page string="Historial de Pr√©stamos">
                <field name="prestamo_ids">
                  <list>
                    <field name="name"/>
                    <field name="fecha_prestamo"/>
                    <field name="fecha_devolucion"/>
                    <field name="usuario_id"/>
                    <field name="estado"/>
                    <field name="condicion_devolucion"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista Lista de Autores -->
    <record model="ir.ui.view" id="biblioteca_autor_list">
      <field name="name">biblioteca.autor.list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Autores -->
    <record model="ir.ui.view" id="biblioteca_autor_form">
      <field name="name">biblioteca.autor.form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="firstname"/>
              <field name="lastname"/>
              <field name="nacimiento"/>
              <field name="libro_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista Lista de Editoriales -->
    <record model="ir.ui.view" id="biblioteca_editorial_list">
      <field name="name">biblioteca.editorial.list</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="pais"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Editoriales -->
    <record model="ir.ui.view" id="biblioteca_editorial_form">
      <field name="name">biblioteca.editorial.form</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="pais"/>
              <field name="ciudad"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista Lista de Usuarios -->
    <record model="ir.ui.view" id="biblioteca_usuario_list">
      <field name="name">biblioteca.usuario.list</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="cedula"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="prestamo_count"/>
          <field name="multa_pendiente_count" decoration-danger="multa_pendiente_count > 0"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Usuarios -->
    <record model="ir.ui.view" id="biblioteca_usuario_form">
      <field name="name">biblioteca.usuario.form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name" placeholder="Ingrese nombre completo"/>
                <field name="cedula" placeholder="Ej: 1712345678"/>
              </group>
              <group>
                <field name="phone" placeholder="+593 99 999 9999"/>
                <field name="email" placeholder="correo@ejemplo.com"/>
              </group>
            </group>
            
            <notebook>
              <page string="Pr√©stamos">
                <field name="prestamo_ids">
                  <list>
                    <field name="name"/>
                    <field name="libro_id"/>
                    <field name="fecha_prestamo"/>
                    <field name="fecha_maxima"/>
                    <field name="estado"/>
                  </list>
                </field>
              </page>
              <page string="Multas">
                <field name="multa_ids">
                  <list>
                    <field name="name"/>
                    <field name="prestamo_id"/>
                    <field name="monto"/>
                    <field name="dias_retraso"/>
                    <field name="tipo_multa"/>
                    <field name="state"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ============================================== -->
    <!-- NUEVO: VISTAS PARA GESTI√ìN DE USUARIOS DEL SISTEMA -->
    <!-- ============================================== -->

    <!-- Vista Lista de Usuarios del Sistema -->
    <record model="ir.ui.view" id="biblioteca_usuario_sistema_list">
      <field name="name">biblioteca.usuario.sistema.list</field>
      <field name="model">biblioteca.usuario.sistema</field>
      <field name="arch" type="xml">
        <list string="Usuarios del Sistema" create="true">
          <field name="name"/>
          <field name="login"/>
          <field name="email"/>
          <field name="es_administrador" widget="boolean" readonly="1"/>
          <field name="user_id" readonly="1"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Usuario del Sistema -->
    <record model="ir.ui.view" id="biblioteca_usuario_sistema_form">
      <field name="name">biblioteca.usuario.sistema.form</field>
      <field name="model">biblioteca.usuario.sistema</field>
      <field name="arch" type="xml">
        <form string="Crear Usuario del Sistema">
          <header>
            <!-- Bot√≥n para crear Usuario Normal -->
            <button name="action_crear_usuario_normal" 
                    type="object" 
                    string="üë§ Crear Usuario Normal" 
                    class="oe_highlight"
                    invisible="user_id"
                    help="Crea un usuario con permisos de solo lectura"/>
            
            <!-- Bot√≥n para crear Administrador (requiere contrase√±a) -->
            <button name="action_crear_administrador" 
                    type="object" 
                    string="üîê Crear Administrador" 
                    class="btn-warning"
                    invisible="user_id"
                    help="Requiere contrase√±a maestra. Crea un administrador con control total"/>
            
            <!-- Badge de estado -->
            <field name="es_administrador" widget="badge" 
                   decoration-danger="es_administrador == True"
                   decoration-success="es_administrador == False"
                   invisible="not user_id"/>
          </header>
          
          <sheet>
            <!-- Alerta si ya fue creado -->
            <div class="alert alert-success" role="alert" invisible="not user_id">
              <strong>‚úÖ Usuario Creado Exitosamente</strong>
              <p style="margin-top: 5px;">
                El usuario ha sido creado en el sistema. 
                Puede iniciar sesi√≥n con el login: <strong><field name="login" readonly="1" nolabel="1"/></strong>
              </p>
            </div>

            <!-- Informaci√≥n del Usuario -->
            <group string="üìã Informaci√≥n del Usuario">
              <group>
                <field name="name" placeholder="Ej: Juan P√©rez" required="1" readonly="user_id"/>
                <field name="login" placeholder="Ej: juanperez" required="1" readonly="user_id"/>
              </group>
              <group>
                <field name="password" password="True" placeholder="Contrase√±a del usuario" required="1" readonly="user_id"/>
                <field name="email" placeholder="correo@ejemplo.com" readonly="user_id"/>
              </group>
            </group>

            <!-- Secci√≥n de Contrase√±a de Administrador (solo visible al crear admin) -->
            <group string="üîê Contrase√±a de Administrador" invisible="user_id">
              <div class="alert alert-warning" role="alert">
                <p><strong>‚ö†Ô∏è Importante:</strong></p>
                <ul style="margin: 10px 0; padding-left: 20px;">
                  <li>Para crear un <strong>Usuario Normal</strong>: Haga clic en "Crear Usuario Normal" (no requiere contrase√±a maestra)</li>
                  <li>Para crear un <strong>Administrador</strong>: Ingrese la contrase√±a maestra abajo y haga clic en "Crear Administrador"</li>
                </ul>
              </div>
              <field name="contrasena_admin" 
                     password="True" 
                     placeholder="Ingrese la contrase√±a maestra para crear administrador"
                     help="Esta contrase√±a est√° configurada en el c√≥digo del sistema"/>
            </group>

            <!-- Informaci√≥n adicional si ya est√° creado -->
            <group string="üìä Estado del Usuario" invisible="not user_id">
              <field name="user_id" readonly="1"/>
              <field name="es_administrador" readonly="1"/>
            </group>

            <!-- Notas informativas -->
            <group invisible="user_id">
              <div class="alert alert-info" role="alert">
                <strong>‚ÑπÔ∏è Tipos de Usuario:</strong>
                <br/><br/>
                <strong>üë§ Usuario Normal:</strong>
                <ul style="margin: 5px 0; padding-left: 20px;">
                  <li>Solo puede VER informaci√≥n (libros, autores, editoriales)</li>
                  <li>Puede ver sus propios pr√©stamos y multas</li>
                  <li>NO puede crear pr√©stamos ni modificar configuraci√≥n</li>
                </ul>
                <br/>
                <strong>üîê Administrador:</strong>
                <ul style="margin: 5px 0; padding-left: 20px;">
                  <li>Control TOTAL del sistema</li>
                  <li>Puede crear y gestionar pr√©stamos</li>
                  <li>Puede ver TODOS los pr√©stamos y multas</li>
                  <li>Puede modificar configuraci√≥n del sistema</li>
                  <li>Requiere contrase√±a maestra para ser creado</li>
                </ul>
              </div>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista Lista de Pr√©stamos -->
    <record model="ir.ui.view" id="biblioteca_prestamo_list">
      <field name="name">biblioteca.prestamo.list</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="libro_id"/>
          <field name="usuario_id"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_maxima"/>
          <field name="estado" 
                 decoration-success="estado == 'd'"
                 decoration-warning="estado == 'p'"
                 decoration-danger="estado == 'm'"/>
          <field name="condicion_devolucion" optional="show"/>
          <field name="dias_retraso" optional="show" decoration-danger="dias_retraso > 0"/>
          <field name="notificacion_enviada" optional="hide"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Pr√©stamos -->
    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">biblioteca.prestamo.form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form string="Pr√©stamo">
          <header>
            <button name="generar_prestamo" type="object" string="Prestar Libro" 
                    class="btn-primary" invisible="estado in ['p','d','m']"
                    groups="biblioteca.group_biblioteca_administrador"/>
            <button name="action_devolver" type="object" string="Devolver Libro" 
                    class="btn-success" invisible="estado in ['d','b']"
                    groups="biblioteca.group_biblioteca_administrador"/>
            <field name="estado" widget="statusbar"/>
          </header>
          <sheet>
            <!-- Alerta de retraso -->
            <div class="alert alert-danger" role="alert" invisible="dias_retraso == 0 or estado == 'd'">
              <strong>‚ö†Ô∏è PR√âSTAMO VENCIDO:</strong> Este pr√©stamo tiene 
              <strong><field name="dias_retraso" readonly="1"/></strong> d√≠as de retraso.
              <span invisible="notificacion_enviada">
              <br/><em>Nota: Se generar√° una multa autom√°ticamente cuando el sistema ejecute la verificaci√≥n.</em>
              </span>
              <span invisible="not notificacion_enviada">
              <br/><em>Multa generada y notificaci√≥n enviada.</em>
              </span>
            </div>

            <!-- Informaci√≥n b√°sica del pr√©stamo -->
            <group>
              <group>
                <field name="name"/>
                <field name="libro_id"/>
                <field name="usuario_id"/>
                <field name="email_lector" readonly="1"/>
              </group>
              <group>
                <field name="fecha_prestamo"/>
                <field name="fecha_maxima"/>
                <field name="fecha_devolucion"/>
                <field name="notificacion_enviada" readonly="1"/>
                <field name="fecha_notificacion" readonly="1" invisible="not notificacion_enviada"/>
              </group>
            </group>

            <!-- Secci√≥n de Devoluci√≥n -->
            <group string="Informaci√≥n de Devoluci√≥n" invisible="estado == 'b'">
              <group>
                <field name="condicion_devolucion" 
                       required="estado in ['p','m']"
                       groups="biblioteca.group_biblioteca_administrador"/>
                <field name="condicion_devolucion" 
                       groups="biblioteca.group_biblioteca_usuario" 
                       readonly="1"/>
              </group>
              <group>
                <field name="notas_devolucion" 
                       placeholder="Ej: P√°gina 15 tiene mancha de caf√©, cubierta rayada..."
                       groups="biblioteca.group_biblioteca_administrador"/>
                <field name="notas_devolucion" 
                       groups="biblioteca.group_biblioteca_usuario" 
                       readonly="1"/>
              </group>
            </group>

            <!-- Secci√≥n de multa -->
            <group string="Informaci√≥n de Multa" invisible="not multa_bol">
              <field name="multa_bol" invisible="1"/>
              <field name="multa" widget="monetary"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Vista de B√∫squeda de Multas con Filtros -->
    <record model="ir.ui.view" id="biblioteca_multa_search">
      <field name="name">biblioteca.multa.search</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="prestamo_id"/>
          
          <filter name="filter_pendientes" string="Pendientes" 
                  domain="[('state', '=', 'pendiente')]"/>
          <filter name="filter_pagadas" string="Pagadas" 
                  domain="[('state', '=', 'pagada')]"/>
          <filter name="filter_retraso" string="Por Retraso" 
                  domain="[('tipo_multa', '=', 'retraso')]"/>
          
          <group expand="0" string="Agrupar Por">
            <filter name="group_estado" string="Estado" context="{'group_by': 'state'}"/>
            <filter name="group_tipo" string="Tipo de Multa" context="{'group_by': 'tipo_multa'}"/>
            <filter name="group_usuario" string="Usuario" context="{'group_by': 'usuario_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- Vista Lista de Multas -->
    <record model="ir.ui.view" id="biblioteca_multa_list">
      <field name="name">biblioteca.multa.list</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <list decoration-danger="state == 'pendiente'" decoration-success="state == 'pagada'">
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="prestamo_id"/>
          <field name="tipo_multa" 
                 decoration-info="tipo_multa == 'retraso'"
                 decoration-warning="tipo_multa in ['dano_leve', 'retraso_y_dano']"
                 decoration-danger="tipo_multa in ['dano_grave', 'perdida']"/>
          <field name="monto" widget="monetary" sum="Total"/>
          <field name="dias_retraso"/>
          <field name="fecha_vencimiento"/>
          <field name="state" 
                 decoration-danger="state == 'pendiente'"
                 decoration-success="state == 'pagada'"
                 decoration-muted="state == 'cancelada'"/>
        </list>
      </field>
    </record>

    <!-- Vista Formulario de Multas -->
    <record model="ir.ui.view" id="biblioteca_multa_form">
      <field name="name">biblioteca.multa.form</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_pagar" type="object" string="Registrar Pago" 
                    class="btn-success" invisible="state in ['pagada','cancelada']"
                    groups="biblioteca.group_biblioteca_administrador"/>
            <field name="state" widget="statusbar" statusbar_visible="pendiente,pagada"/>
          </header>
          <sheet>
            <!-- Banner de Estado -->
            <div class="alert alert-warning" role="alert" invisible="state != 'pendiente'">
              <strong>‚ö†Ô∏è MULTA PENDIENTE DE PAGO</strong>
            </div>
            <div class="alert alert-success" role="alert" invisible="state != 'pagada'">
              <strong>‚úÖ MULTA PAGADA</strong>
            </div>

            <!-- Informaci√≥n Principal -->
            <group>
              <group>
                <field name="name" readonly="1"/>
                <field name="usuario_id" readonly="1"/>
                <field name="prestamo_id" readonly="1"/>
                <field name="tipo_multa" readonly="1" 
                       widget="badge"
                       decoration-info="tipo_multa == 'retraso'"
                       decoration-warning="tipo_multa in ['dano_leve', 'retraso_y_dano']"
                       decoration-danger="tipo_multa in ['dano_grave', 'perdida']"/>
              </group>
              <group>
                <field name="monto" widget="monetary" readonly="1"/>
                <field name="dias_retraso" readonly="1"/>
                <field name="fecha_vencimiento" readonly="1"/>
              </group>
            </group>

            <!-- Descripci√≥n Detallada de la Multa -->
            <group string="üìù Detalles de la Multa">
              <field name="descripcion" nolabel="1" readonly="1" 
                     widget="text" 
                     placeholder="Descripci√≥n detallada de la multa generada autom√°ticamente por el sistema"/>
            </group>

            <!-- Informaci√≥n del Pr√©stamo Asociado -->
            <group string="üìö Informaci√≥n del Pr√©stamo">
              <group>
                <label for="prestamo_id" string="Libro Prestado"/>
                <div>
                  <field name="prestamo_id" invisible="1"/>
                  <strong>
                    <field name="prestamo_id" readonly="1" 
                           widget="many2one" 
                           options="{'no_create': True, 'no_open': True}"/>
                  </strong>
                </div>
              </group>
            </group>

            <!-- Informaci√≥n Adicional para Multas Pendientes -->
            <group string="üí° Informaci√≥n de Pago" invisible="state != 'pendiente'">
              <div class="alert alert-info" role="alert">
                <p><strong>Para pagar esta multa:</strong></p>
                <ul>
                  <li>Ac√©rquese a la biblioteca con su identificaci√≥n</li>
                  <li>Presente el c√≥digo de la multa: <strong><field name="name" readonly="1" nolabel="1"/></strong></li>
                  <li>Realice el pago en caja</li>
                  <li>El personal registrar√° su pago en el sistema</li>
                </ul>
              </div>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Men√∫s -->
    <menuitem name="Biblioteca" id="biblioteca_menu" sequence="10"/>
    <menuitem name="Cat√°logo" id="biblioteca_menu_catalogo" parent="biblioteca_menu" sequence="10"/>
