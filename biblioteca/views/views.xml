    <!-- Top menu item -->

    <menuitem name="biblioteca" id="biblioteca.menu_root"/>

    <!-- menu categories -->

    <menuitem name="autores" id="biblioteca_menu_autores" parent="biblioteca.menu_root"/>
    <menuitem name="libro" id="biblioteca.menu_libros" parent="biblioteca.menu_root"/>
    <menuitem name="prestamos" id="biblioteca.menu_prestamos" parent="biblioteca.menu_root"/>
    <menuitem name="multas" id="biblioteca.menu_multas" parent="biblioteca.menu_root"/>

    <!-- actions -->

    <menuitem name="autores" 
              id="biblioteca.menu_autor" 
              parent="biblioteca_menu_autores"
              action="biblioteca_autor_action_window"/>

    <menuitem name="libros" 
              id="biblioteca.menu_autor" 
              parent="biblioteca_menu_autores"
              action="biblioteca_autor_action_window"/>

    <menuitem name="prestamos" 
              id="biblioteca.menu_prestamo" 
              parent="biblioteca_menu_autores"
              action="biblioteca_autor_action_window"/>

