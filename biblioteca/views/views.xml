<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Actions -->
    <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
      <field name="name">Libros</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_autor_action_window">
      <field name="name">Autores</field>
      <field name="res_model">biblioteca.autor</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_editorial_action_window">
      <field name="name">Editoriales</field>
      <field name="res_model">biblioteca.editorial</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_usuario_action_window">
      <field name="name">Usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_prestamo_action_window">
      <field name="name">Préstamos</field>
      <field name="res_model">biblioteca.prestamo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_multa_action_window">
      <field name="name">Multas</field>
      <field name="res_model">biblioteca.multa</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Views: Libro -->
    <record model="ir.ui.view" id="biblioteca_libro_tree">
      <field name="name">biblioteca.libro.tree</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <tree>
          <field name="titulo"/>
          <field name="autor"/>
          <field name="ejemplares"/>
          <field name="isbn"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca.libro.form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form string="Libro">
          <header>
            <button name="action_buscar_openlibrary" type="object" string="Buscar en OpenLibrary" class="oe_highlight"/>
          </header>
          <sheet>
            <group>
              <field name="firstname"/>
              <field name="titulo"/>
              <field name="autor"/>
              <field name="editorial"/>
              <field name="genero"/>
              <field name="isbn"/>
              <field name="ejemplares"/>
              <field name="costo"/>
            </group>
            <group>
              <field name="description"/>
              <field name="fecha_publicacion"/>
              <field name="paginas"/>
              <field name="ubicacion"/>
            </group>
            <notebook>
              <page string="Historial de Préstamos">
                <field name="prestamo_ids">
                  <tree>
                    <field name="name"/>
                    <field name="fecha_prestamo"/>
                    <field name="fecha_devolucion"/>
                    <field name="usuario_id"/>
                    <field name="estado"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Views: Autor -->
    <record model="ir.ui.view" id="biblioteca_autor_tree">
      <field name="name">biblioteca.autor.tree</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <tree>
          <field name="firstname"/>
          <field name="lastname"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_autor_form">
      <field name="name">biblioteca.autor.form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="firstname"/>
              <field name="lastname"/>
              <field name="nacimiento"/>
              <field name="libro_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Views: Editorial -->
    <record model="ir.ui.view" id="biblioteca_editorial_tree">
      <field name="name">biblioteca.editorial.tree</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="pais"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_editorial_form">
      <field name="name">biblioteca.editorial.form</field>
      <field name="model">biblioteca.editorial</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="pais"/>
              <field name="ciudad"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Views: Usuario -->
    <record model="ir.ui.view" id="biblioteca_usuario_tree">
      <field name="name">biblioteca.usuario.tree</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="prestamo_count"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_usuario_form">
      <field name="name">biblioteca.usuario.form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="cedula"/>
              <field name="phone"/>
              <field name="email"/>
            </group>
            <group>
              <field name="prestamo_ids"/>
              <field name="multa_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Views: Prestamo -->
    <record model="ir.ui.view" id="biblioteca_prestamo_tree">
      <field name="name">biblioteca.prestamo.tree</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="libro_id"/>
          <field name="usuario_id"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_devolucion"/>
          <field name="estado"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_prestamo_form_simple">
      <field name="name">biblioteca.prestamo.form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form string="Préstamo">
          <header>
            <button name="generar_prestamo" type="object" string="Prestar" class="btn-primary" attrs="{ 'invisible': [('estado','in', ['p','d','m'])] }"/>
            <field name="estado" widget="statusbar"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="fecha_prestamo"/>
              <field name="fecha_devolucion"/>
              <field name="libro_id"/>
              <field name="usuario_id"/>
              <field name="multa_bol"/>
              <field name="multa"/>
              <field name="fecha_maxima"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Views: Multa -->
    <record model="ir.ui.view" id="biblioteca_multa_tree">
      <field name="name">biblioteca.multa.tree</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="prestamo_id"/>
          <field name="monto"/>
          <field name="dias_retraso"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_multa_form">
      <field name="name">biblioteca.multa.form</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="action_pagar" type="object" string="Registrar Pago" class="oe_highlight" attrs="{ 'invisible': [('state','in',['pagada','cancelada'])] }"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="usuario_id"/>
              <field name="prestamo_id"/>
              <field name="monto"/>
              <field name="dias_retraso"/>
              <field name="fecha_vencimiento"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Menús y secuencias -->
    <menuitem name="Biblioteca" id="biblioteca_menu" sequence="10"/>
    <menuitem name="Catálogo" id="biblioteca_menu_catalogo" parent="biblioteca_menu" sequence="10"/>
    <menuitem name="Gestión de Préstamos" id="biblioteca_menu_gestion" parent="biblioteca_menu" sequence="20"/>

    <menuitem name="Libros" id="biblioteca.menu_libros" parent="biblioteca_menu_catalogo" action="biblioteca_libro_action_window" sequence="10"/>
    <menuitem name="Autores" id="biblioteca.menu_autores" parent="biblioteca_menu_catalogo" action="biblioteca_autor_action_window" sequence="20"/>
    <menuitem name="Editoriales" id="biblioteca.menu_editoriales" parent="biblioteca_menu_catalogo" action="biblioteca_editorial_action_window" sequence="30"/>
    <menuitem name="Usuarios" id="biblioteca.menu_usuarios" parent="biblioteca_menu_gestion" action="biblioteca_usuario_action_window" sequence="10"/>
    <menuitem name="Préstamos" id="biblioteca.menu_prestamos" parent="biblioteca_menu_gestion" action="biblioteca_prestamo_action_window" sequence="20"/>
    <menuitem name="Multas" id="biblioteca.menu_multas" parent="biblioteca_menu_gestion" action="biblioteca_multa_action_window" sequence="30"/>

    <record id="seq_biblioteca_prestamo" model="ir.sequence">
        <field name="name">Referencia de Préstamo</field>
        <field name="code">biblioteca.prestamo</field>
        <field name="prefix">PR/%(year)s/</field>
        <field name="padding">4</field>
    </record>
    
    <record id="seq_biblioteca_multa" model="ir.sequence">
        <field name="name">Referencia de Multa</field>
        <field name="code">biblioteca.multa</field>
        <field name="prefix">MU/%(year)s/</field>
        <field name="padding">4</field>
    </record>
    
  </data>
</odoo>
      <field name="name">biblioteca.usuario.form</field>
      <field name="model">biblioteca.usuario</field>
      <field name="arch" type="xml">
        <form>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_prestamo_list">
      <field name="name">biblioteca.prestamo.list</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <list default_order="fecha_prestamo desc">
          <field name="name"/>
          <field name="libro_id"/>
          <field name="usuario_id"/>
          <field name="fecha_prestamo"/>
          <field name="fecha_devolucion"/>
          <field name="state" widget="badge" decoration-danger="state == 'prestado' and fecha_devolucion &lt; current_date" decoration-info="state == 'prestado'"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">biblioteca.prestamo.form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form>
        <header>
            <button name="action_devolver" type="object" string="Registrar Devolución" 
                    invisible="state in ['devuelto', 'cancelado']" 
                    class="oe_highlight"/>
            <field name="state" widget="statusbar" statusbar_visible="prestado,devuelto"/>
        </header>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_multa_list">
      <field name="name">biblioteca.multa.list</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="usuario_id"/>
          <field name="prestamo_id"/>
          <field name="monto"/>
          <field name="dias_retraso"/>
          <field name="state" widget="badge" decoration-danger="state == 'pendiente'" decoration-success="state == 'pagada'"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_multa_form">
      <field name="name">biblioteca.multa.form</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
        <header>
            <button name="action_pagar" type="object" string="Registrar Pago" 
                    invisible="state in ['pagada', 'cancelada']"
                    class="oe_highlight"/>
            <field name="state" widget="statusbar" statusbar_visible="pendiente,pagada"/>
        </header>
        </form>
      </field>
    </record>

    <menuitem name="Biblioteca" id="biblioteca_menu" sequence="10"/>
    <menuitem name="Catálogo" id="biblioteca_menu_catalogo" parent="biblioteca_menu" sequence="10"/>
    <menuitem name="Gestión de Préstamos" id="biblioteca_menu_gestion" parent="biblioteca_menu" sequence="20"/>

    <menuitem name="Libros" id="biblioteca.libro" parent="biblioteca_menu_catalogo" action="biblioteca_libro_action_window" sequence="10"/>
    <menuitem name="Autores" id="biblioteca.autor" parent="biblioteca_menu_catalogo" action="biblioteca_autor_action_window" sequence="20"/>
    <menuitem name="Usuarios" id="biblioteca.usuario" parent="biblioteca_menu_gestion" action="biblioteca_usuario_action_window" sequence="10"/>
    <menuitem name="Préstamos" id="biblioteca.prestamo" parent="biblioteca_menu_gestion" action="biblioteca_prestamo_action_window" sequence="20"/>
    <menuitem name="Multas" id="biblioteca.multa" parent="biblioteca_menu_gestion" action="biblioteca_multa_action_window" sequence="30"/>

    <record id="seq_biblioteca_prestamo" model="ir.sequence">
        <field name="name">Referencia de Préstamo</field>
        <field name="code">biblioteca.prestamo</field>
        <field name="prefix">PR/%(year)s/</field>
        <field name="padding">4</field>
    </record>
    
    <record id="seq_biblioteca_multa" model="ir.sequence">
        <field name="name">Referencia de Multa</field>
        <field name="code">biblioteca.multa</field>
        <field name="prefix">MU/%(year)s/</field>
        <field name="padding">4</field>
    </record>
    
  </data>
</odoo>