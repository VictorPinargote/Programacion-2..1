<odoo>
  <data>

    <record model="ir.ui.view" id="biblioteca_wizard_form">
      <field name="name">biblioteca_wizard_form</field>
      <field name="model">biblioteca.wizard</field>
      <field name="arch" type="xml">
        <form>
          <label for="evaluacion_libro" string="Estado de libro"/>
          <field name="evaluacion_libro" widget="radio"/>
          <label for="observaciones" string="Comentario"/>
          <field name="observaciones"/>
          <footer>
            <button string='Aceptar' type='object' name='cerrar_prestamo' class='btn-primary'/>
            <button string="Cancel" special="cancel"/>
          </footer>
         </form>

       </field>
    </record>

      <record model="ir.actions.act_window" id="biblioteca_wizard_action_window">
      <field name="name">biblioteca wizard</field>
      <field name="res_model">biblioteca.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="context">{'default_prestamo_id': context.get('active_id')}</field>
      </record>

  </data>
</odoo>